<div class="row">
    <h3>Student Grade Report App</h3>
</div>
<div class="row">
    <p>
        <a href="/create" class="btn btn-success">Create</a>
    </p>
    <table class="table table-striped table-dark">
    <thead>
        <tr>
        <th scope="col">Student Id</th>
        <th scope="col">Student Name</th>
        <th scope="col">Student Percentage</th>
        <th scope="col">Student Letter Grade</th>
        </tr>
    </thead>
        <tbody>
        {{# each students}}
            <tr>
                <th scope="row">{{id}}</th>
                <td>{{studentName}}</td>
                <td>{{studentPercent}}</td>
                <td>{{studentLetterGrade}}</td>
                <td>
                    <a class="btn" href=`/read?id=" + {{id}}`>Read</a>
                    <a class="btn" href="/edit?id=" + {{id}}>Edit</a>
                    <a class="btn" href="/delete?id=" + {{id}}>Delete</a>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>